<Window x:Class="malkowwy.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список сотрудников" Height="400" Width="300">
    <Grid>
        <ListBox Name="ListBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="добавить" Width="75" Margin="5" Click="AddButton_Click"/>
            <Button Content="удалить" Width="75" Margin="5" Click="RemoveButton_Click"/>
            <Button Content="редактировать" Width="75" Margin="5" Click="EditButton_Click"/>
        </StackPanel>
    </Grid>
</Window>